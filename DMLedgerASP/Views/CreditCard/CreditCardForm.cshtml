@model DMLedgerASP.ViewModels.NewCreditCardViewModel
@{
    ViewBag.Title = "Credit Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Credit Card</h2>

@using (Html.BeginForm("Create", "CreditCard"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CreditCard.Name)
        @Html.TextBoxFor(m => m.CreditCard.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreditCard.Balance)
        @Html.TextBoxFor(m => m.CreditCard.Balance, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}