<div class="col-lg-6">
    <h3>Bills</h3>

    <!-- Add new Bill to table, third table -->
    <label>Add New Bill</label>
    <form class="form-inline form-group-sm" id="newBill">
        <div class="form-group">
            <label>Bill Name</label><br />
            <input id="billName" name="billName" required type="text" value="" class="form-control" placeholder="Bill name" />
        </div>
        <div class="form-group">
            <label>Payment</label><br />
            <input id="billPayment" name="billPayment" required type="text" value="" class="form-control" placeholder="Payment amount" />
        </div>
        <div class="form-group">
            <label>Due Date</label><br />
            <input id="billDue" name="billDue" required type="date" value="" class="form-control" placeholder="Payment Date" />
        </div>
        <div class="form-group">
            <label hidden>Add Button</label><br />
            <button type="submit" id="billSubmit" class="btn btn-primary btn-sm">Add</button>
        </div>
    </form><br />

    <!-- Bills Table -->
    <table id="bills" class="display table table-bordered table-hover" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Payment</th>
                <th>Due Date</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th style="text-align:right">Total: </th>
                <th style="text-align:right" id="billTotal"></th>
                <th colspan="2"></th>
            </tr>
        </tfoot>
    </table>
</div>
