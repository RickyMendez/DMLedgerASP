@model DMLedgerASP.ViewModels.UserAccountDataViewModel
@{
    ViewBag.Title = "User";
}

<h2>Ledger</h2>

<h3>Bank Accounts</h3>
<form id="addBank" class="form-control form-inline"></form>
<table id="accounts" class="display table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Balance</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>

<h3>Credit Cards</h3>
<table id="creditcards" class="display table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Limit</th>
            <th>Balance</th>
            <th>Payment</th>
            <th>Due Date</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>

<h3>Bills</h3>
<table id="bills" class="display table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Payment</th>
            <th>Due Date</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var account_table = $("#accounts").DataTable({
                ajax: {
                    url: "/api/users",
                    dataSrc: "bankAccounts"
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "balance",
                        editField: true
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-account-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });


            var creditcard_table = $("#creditcards").DataTable({
                ajax: {
                    url: "/api/users",
                    dataSrc: "creditCards"
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "limit"
                    },
                    {
                        data: "balance",
                        editField: true
                    },
                    {
                        data: "payment",
                        editField: true
                    },
                    {
                        data: "dueDate",
                        editField: true
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-creditcard-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            var bill_table = $("#bills").DataTable({
                ajax: {
                    url: "/api/users",
                    dataSrc: "bills"
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "payment"
                    },
                    {
                        data: "dueDate"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-bill-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#accounts").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure that you want to delete this entry?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/bankaccounts/" + button.attr("data-account-id"),
                            method: "DELETE",
                            success: function () {
                                account_table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });

            $("#bills").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure that you want to delete this entry?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/bills/" + button.attr("data-bill-id"),
                            method: "DELETE",
                            success: function () {
                                bill_table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
            $("#creditcards").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure that you want to delete this entry?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/creditcards/" + button.attr("data-creditcard-id"),
                            method: "DELETE",
                            success: function () {
                                creditcard_table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}


